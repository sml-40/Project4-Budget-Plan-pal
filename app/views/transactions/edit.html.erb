
<div class="container">
<%= form_with(model: @transaction, url: transaction_path(@transaction), method: :patch) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :amount %>
  <%= form.text_field :amount %>

  <%= form.label :transaction_date %>
  <%= form.date_field :transaction_date %>

  <%= form.label :category %>
  <%= form.select :category, options_for_select(["Groceries", "Travel", "Food", "Entertainment", "Housing", "Transportation", "Personal Care", "Education", "Health/fitness", "Miscellaneous"]), {}, class: 'form-control' %>

  <%= form.submit "Update Transaction" %>
<% end %>
</div>
